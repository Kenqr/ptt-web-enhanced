{
    "manifest_version": 2,
    "name": "PTT-Web-Enhanced",
    "version": "1.3.1",

    "description": "幫 PTT web 版增加各種方便的功能",

    "applications": {
        "gecko": {
            "strict_min_version": "52.0"
        }
    },

    "permissions": [
        "downloads",
        "storage"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["https://www.ptt.cc/bbs/*/M.*.html"],
            "js": [
                "utils/settings.js",
                "utils/helpers.js",
                "article.js"
            ],
            "css": ["article.css"]
        }
    ],

    "options_ui": {
        "page": "options.html"
    }
}
