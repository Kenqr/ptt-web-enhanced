{
    "manifest_version": 2,
    "name": "PTT-Web-Enhanced",
    "version": "1.1",

    "description": "幫 PTT web 版增加各種方便的功能",

    "permissions": [
        "downloads"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["https://www.ptt.cc/bbs/*/M.*.html"],
            "js": ["article.js"],
            "css": ["article.css"]
        }
    ]
}
