{
    "manifest_version": 2,
    "name": "PTT-Web-Enhanced",
    "version": "1.6.1",

    "description": "幫 PTT web 版增加各種方便的功能",

    "applications": {
        "gecko": {
            "id": "{27376da4-366d-4549-878e-5934e0114107}",
            "strict_min_version": "52.0"
        }
    },

    "permissions": [
        "downloads",
        "storage"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": [
                "https://www.ptt.cc/bbs/*/index*.html",
                "https://www.ptt.cc/bbs/*/search?*"
            ],
            "js": [
                "utils/settings.js",
                "utils/helpers.js",
                "board.js"
            ],
            "css": [
                "shared.css",
                "board.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": ["https://www.ptt.cc/bbs/*/M.*.html"],
            "js": [
                "utils/settings.js",
                "utils/helpers.js",
                "article.js"
            ],
            "css": [
                "shared.css",
                "article.css"
            ],
            "run_at": "document_end"
        }
    ],

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}
